/**app.wxss**/

page {
  font-size: 16px;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  background: #f8f8f8;
  color: #222222;
}

view,
text,
textarea,
button {
  box-sizing: border-box;
}

.ellipsis {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

/* button */
button {
  margin: 0;
}
button[type='primary'] {
  background-color: #0FCEED !important;
}