/**app.wxss**/

page {
  font-size: 32rpx;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  background: #f8f8f8;
  color: #222222;
}

view,
text,
textarea,
scroll-view,
textarea,
button {
  box-sizing: border-box;
}

.ellipsis {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.two-ellipsis {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* button */
button {
  margin: 0;
}

button[type='primary'] {
  background-color: #0FCEED !important;
}

::-webkit-scrollbar {
  display: none;
}