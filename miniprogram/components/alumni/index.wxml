<!--components/alumni/index.wxml-->
<view class="alumni">
  <view class="cover">
    <image style="width: 100%; height: 100%;" mode="aspectFill" src="{{ classMate.cover }}"></image>
  </view>
  <view class="r">
    <view class="title">{{classMate.title}}</view>
    <view class="description two-ellipsis">
      <text>{{ classMate.description }}</text>
    </view>
    <view class="b">
      <view class="music">
        音乐
      </view>
      <view class="btns">
        <van-icon name="wechat-moments" />
        <van-icon name="shop" size="20px"/>
        <image catchtap="handleShareClick" style="width: 20px; height: 20px; margin-left: 5px;" src="/images/fx.png"></image>
      </view>
    </view>
  </view>
</view>