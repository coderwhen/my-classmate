<!--components/alumni/index.wxml-->
<view class="alumni" catch:tap="handleToDetail">
  <view class="cover">
    <image binderror="handleCoverError" style="width: 100%; height: 100%;" mode="aspectFill" src="{{ classMate.cover.url }}"></image>
  </view>
  <view class="r">
    <view class="title">{{classMate.title}}</view>
    <view class="description two-ellipsis">
      <text>{{ classMate.description }}</text>
    </view>
    <view class="b">
      <view class="music">
        <van-icon bind:click="handleShareClick" name="music" size="25px"/>
        <text>已选取{{ classMate.musicList.length }}首音乐</text>
      </view>
      <view class="btns">
        <van-icon catch:tap="handleEditClick" name="todo-list" size="25px"/>
        <van-icon catch:tap="handleShareClick" name="share" size="25px"/>
      </view>
    </view>
  </view>
</view>