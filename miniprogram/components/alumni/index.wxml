<!--components/alumni/index.wxml-->
<view class="alumni">
    <view class="cover">
        <image style="width: 100%; height: 100%;" mode="aspectFill" src="{{ classMate.cover }}"></image>
    </view>
    <view class="r">
        <view class="title">{{classMate.title}}</view>
        <view class="description two-ellipsis">{{ classMate.description }}</view>
        <view class="b">
            <view class="music">
                音乐
            </view>
            <view class="btns">
                <image style="width: 20px; height: 20px; margin-left: 5px;" src="/images/fx.png"></image>
                <image style="width: 20px; height: 20px; margin-left: 5px;" src="/images/fx.png"></image>
                <image catchtap="handleShareClick" style="width: 20px; height: 20px; margin-left: 5px;" src="/images/fx.png"></image>
            </view>
        </view>
    </view>
</view>
