/* components/alumni/index.wxss */
.alumni {
  padding: 15px;
  background-color: #ffffff;
  display: flex;
  margin-bottom: 10px;
}

.cover {
  width: 200rpx;
  height: 250rpx;
  background-color: #f8f8f8;
  border-radius: 7px;
  overflow: hidden;
}

.r {
  margin-left: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.title {
  font-weight: 700;
  height: 60rpx;
  font-size: 50rpx;
  line-height: 60rpx;
  color: #000000;
  opacity: 1;
}

.description {
  /* height: 100rpx; */
  font-size: 32rpx;
  line-height: 44rpx;
  color: #777777;
  max-height: 132rpx;
  overflow: hidden;
}

.description text {
  padding: 5px 7.5px;
  background-color: #f8f8f8;
}

.b {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.two-ellipsis {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.music {
  display: flex;
  align-items: center;
}