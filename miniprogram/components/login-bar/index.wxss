/* components/login-bar/index.wxss */
.login-bar {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 750rpx;
    display: flex;
    align-items: center;
    padding: 0 15px;
    justify-content: space-between;
    height: 100rpx;
    background: rgba(0, 0, 0, .2);
}

.login-bar text {
    font-size: 40rpx;
    font-weight: 400;
    line-height: 56rpx;
    color: #FFFFFF;
    opacity: 1;
}