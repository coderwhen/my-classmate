/* pages/book-detail/index.wxss */
page {
  /* background-color: #0FCEED; */
  height: 100vh;
}

.header {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 104px;
  z-index: 99;
}

.box {
  /* background-color: rgba(255,255,255, .9); */
  /* padding: 104px 15px 0 15px; */
  /* padding: 15px; */
  height: 100vh;
}

.box::after,
.box::before {
  content: '';
  display: block;
  height: 0;
}

.book-edit {
  /* position: fixed; */
  /* top: 15px; */
  /* right: 15px; */
  /* left: 15px; */
  background-color: #ffffff;
  padding: 31px 15px 5px 15px;
  min-height: 300px;
  color: #17adc4;
  transition: all .3s;
  margin: 25px 15px;
  transform: translate(0, 0);
}

.book-edit.active {
  box-shadow: 4rpx 4rpx 8rpx rgba(0, 0, 0, .1);
  /* background-color: rgba(255, 255, 255, .95); */
  /* transform: translate(0, -15px); */
}

.field {
  font-size: 16px;
  display: flex;
  align-items: center;
  margin-bottom: 15px;
  min-height: 30px;
}

.field text:nth-child(1) {
  min-width: 50px;
}

.field.time {
  font-size: 12px;
}

.field .input {
  flex: 1;
  border-bottom: 1px dashed #0FCEED;
  padding: 7px 5px 5px 5px;
  font-size: 14px;
}

.b-bottom {
  height: 50px;
  text-align: center;
  padding: 10px 0;
  color: #17adc4;
}