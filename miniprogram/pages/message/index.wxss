/* pages/message/index.wxss */
.bottom {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 40px;
    background-color: rgba(255, 255, 255, .8);
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.swiper {
    position: relative;
    height: calc(100vh - 100rpx - 120rpx);
}

.swiper.login {
    height: calc(100vh - 120rpx);
}

.swiper .image {
    height: 240rpx;
    width: 240rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}